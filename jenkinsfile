pipeline {
    agent any
    stages {
        stage('Checkout GIT') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[url: 'https://github.com/mohamedaminesabehy/MiniPro']]
                ])
            }
        }
  stage('MVN CLEAN') {
              steps {
                 withMaven() {
                bat 'mvn clean compile'

             }
           }
          }
          stage('MVN COMPILE') {
                              steps {
                                  bat 'mvn compile'
                              }
                          }

                          stage('MVN PACKAGE') {
                              steps {
                                  bat 'mvn package'
                              }
                          }

                          stage('MVN TEST') {
                              steps {
                                  bat 'mvn test'
                              }
                          }
                          stage('MVN SONARQUBE') {
                                      steps {
                                          bat 'mvn clean verify sonar:sonar \
                                                -Dsonar.projectKey=app \
                                                -Dsonar.host.url=http://localhost:9000 \
                                                -Dsonar.login=sqp_5b3f89f0523442a9c19005e905ea61fd7ab92e77'
                                      }
                                  }
                                       stage('Docker login') {

                                         steps {
                                         bat 'echo "login Docker ...."'
                                        bat'docker login -u mohamedaminesabehy -p clubafrican123'
                                                                                                    }  }
                                               stage('Docker push') {

                                              steps {
                                             bat 'echo "Docker is pushing ...."'
                                              	bat 'docker push mohamedaminesabehy/Projet-1.0.0:latest'
                                                                                                    }  }
      }
    }